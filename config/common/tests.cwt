types = {
    type[test] = {
        path = "game/common/tests"
        path = "game/in_game/common/tests"
        path = "game/main_menu/common/tests"
        path = "game/loading_screen/common/tests"
        file_extension = .txt
    }
}

test = {
    ### the start year when the test is started to be checked
    ## cardinality = 0..1
    year = int

    ### the triggers the test need to fulfill for it to pass
    success = single_alias_right[trigger_clause]

    ### the triggers the test need to fulfill for it to fail
    ## cardinality = 0..1
    failure = single_alias_right[trigger_clause]

    ### the test will be inactive once this year is passed
    end_year = int

    ### the test will automatically fail if that date passes if set to yes, defaults to no
    ## cardinality = 0..1
    fail_on_end_year = bool

    ### effects which happen if the test passes, make sure to only use test_log though
    ## cardinality = 0..1
    success_effect = {
        ## cardinality = 0..inf
        test_log = localisation
        ## cardinality = 0..inf
        test_log = scalar
    }

    ### effects which happen if the test fails, make sure to only use test_log though
    ## cardinality = 0..1
    failure_effect = {
        ## cardinality = 0..inf
        test_log = localisation
        ## cardinality = 0..inf
        test_log = scalar
    }
}
