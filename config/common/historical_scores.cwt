types = {
    type[historical_score] = {
        path = "game/common/historical_scores"
        path = "game/in_game/common/historical_scores"
        path = "game/main_menu/common/historical_scores"
        path = "game/loading_screen/common/historical_scores"
        file_extension = .txt
        localisation = {
            name = "$"
            desc = "$_desc"
        }
    }
}

historical_score = {
    tag = <country>
    tag = enum[formable_country_tag]

    score = int
}
